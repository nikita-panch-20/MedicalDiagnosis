<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".GeneralSymptomsReportActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/logoImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:transitionName="logoImage"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/medical1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REPORT"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptoms:"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dull pain in the stomach:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewStomachPain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nausea or Vomiting:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewNausea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burning sensation in the chest:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewBurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burping or Bloating sensation:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewBurp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Irregular or faster heartbeat:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewHeartBeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weakness, dizziness or fatique:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewWeakness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sweating:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewSweat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loss of appetite and weight loss:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewAppetite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abdominal pain:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewAbdomen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loose Stools(Diarrhea, Dysentry) or constipation:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewDiarrhea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muscle cramps or pains:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewMuscles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breathlessness:"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/textViewBreathe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="15sp"
                android:textColor="#000"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Disease Diagnosed And Treatment :"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textViewDisease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="disease"
                android:textSize="15sp"
                android:textColor="#000"/>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>