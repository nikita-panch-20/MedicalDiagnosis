<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.gs.medicaldiagnosisexpertsystem.EntActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="Eye Issues:"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/checkBoxEyeBurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eye Burning"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.181"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <CheckBox
                android:id="@+id/checkBoxRedEye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Redness in eye"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.181"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <CheckBox
                android:id="@+id/checkBoxTearEye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequent watering"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.181"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <CheckBox
                android:id="@+id/checkBoxDryEye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dryness in eye"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.181"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <CheckBox
                android:id="@+id/checkBoxSight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Eye Sight (Mention the Sight Below) "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTemperature" />

            <EditText
                android:id="@+id/editTextEye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Mention the eye sight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.141"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxCold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasal Issues:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                />
            <CheckBox
                android:id="@+id/checkBoxNasalCongestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasal Congestion"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTemperature" />
            <CheckBox
                android:id="@+id/checkBoxBleeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bleeding of nose"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTemperature" />
            <CheckBox
                android:id="@+id/checkBoxNasalAllergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Any allegeries or any other issues,if any Mention Below "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTemperature" />

            <EditText
                android:id="@+id/editTextNasal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Mention the allergy or issues"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.141"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxCold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Throat Issues:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <CheckBox
                android:id="@+id/checkBoxIrritation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Irritation in throat(Painful Throat)"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCold" />
            <CheckBox
                android:id="@+id/checkBoxVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Change of Voice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCold" />
            <CheckBox
                android:id="@+id/checkBoxSoreThroat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sore Throat"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCold" />
            <CheckBox
                android:id="@+id/checkBoxDryness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dryness Throat"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCold" />
            <CheckBox
                android:id="@+id/checkBoxThroatAllergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Any Allergies or any other Issues.If yes, Mention below."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCold" />

            <EditText
                android:id="@+id/editTextThroat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Mention the allergy or issue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.141"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxCough" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ear Issues:"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp" />

            <CheckBox
                android:id="@+id/checkBoxEarAche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Ear Ache(Severe or Mild)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCough" />
            <CheckBox
                android:id="@+id/checkBoxHearLoss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hearing Loss"
                android:onClick="onCheckboxClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCough" />
            <CheckBox
                android:id="@+id/checkBoxRingEar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Ringing of ears"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCough" />
            <CheckBox
                android:id="@+id/checkBoxBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Difficulty in balance or walking"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCough" />
            <CheckBox
                android:id="@+id/checkBoxEarFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Feeling of Ear fullness"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCough" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="OnSubmit"
                android:background="@color/colorAccent"
                android:text="Submit"/>
            <Button
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="OnGetReportTapped"
                android:background="@color/colorAccent"
                android:text="Get Report"/>
        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>